# Discord Bot Token (note: double underscore for nested Pydantic config)
# Get from: https://discord.com/developers/applications
DISCORD__TOKEN=your_discord_bot_token_here

# Discord Configuration
# Your Discord user ID (for owner-only commands) - use JSON array format
DISCORD__OWNER_IDS=[your_discord_user_id]

# Guild/Server IDs where bot should operate - use JSON array format
DISCORD__GUILD_IDS=[your_guild_id_1,your_guild_id_2]

# Command prefix for text commands
DISCORD__COMMAND_PREFIX=!

# Bot Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false
SYNC_ON_STARTUP=true

# Database
DATABASE__URL=sqlite:///data/bot.db
DATABASE__ECHO=false

# Audio Settings
AUDIO__DEFAULT_VOLUME=0.5
AUDIO__MAX_QUEUE_SIZE=50

# YouTube PO Token Provider (bgutil-ytdlp-pot-provider)
# URL of the bgutil POT provider service for bypassing YouTube bot detection
# Default: http://127.0.0.1:4416
# AUDIO__POT_SERVER_URL=http://127.0.0.1:4416

# AI/OpenAI (Optional - for recommendations)
# Get from: https://platform.openai.com/api-keys
# AI__API_KEY=your_openai_api_key_here
# AI__MODEL=gpt-5-mini
# AI__CACHE_TTL_SECONDS=3600

# Voting
VOTING__SKIP_THRESHOLD_PERCENTAGE=0.5
VOTING__MIN_VOTERS=1

# Cleanup
CLEANUP__STALE_SESSION_HOURS=24
CLEANUP__CLEANUP_INTERVAL_MINUTES=30
